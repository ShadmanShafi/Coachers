  <link rel="stylesheet" href="/seogram/assets/css/bootstrap.css">

  <link rel="stylesheet" href="/seogram/assets/vendor/animate/animate.css">

  <link rel="stylesheet" href="/seogram/assets/css/theme.css">

  <script>
    function getTopics(){
        const subjectChosen = document.getElementById('subjectname').value;
        if(subjectChosen != '--'){
            window.location.replace("/users/quiz/" + subjectChosen);
        }
    }
</script>

</head>
<body>

  <!-- Back to top button -->
  <div class="back-to-top"></div>

  <!-- Header -->
  <%- include('./userPartials/headerNavbar.ejs') %>
  <!-- header end -->

  

  <div class="page-section bg-light">
    <div class="container">
      <div style="padding-left: 10%;">
        <!-- Form -->
            <form action="/users/quizInfoPage" method="POST">
              <!-- Username -->
              <div class="mb-3">
                <label for="Subjectname" class="form-label">Choose Subject Name</label>
                <!-- <input type="text" id="text" class="form-control" name="subjectname" placeholder="subject" required=""> -->

                  <select id="subjectname" name="subjectname" onchange="getTopics()">
                    <option>--</option>
                    <% if(SubjectList.length>0){ %>
                         <% SubjectList.forEach(subject => { %>
                            <% if(chosenSubject != subject.name){   %>
                                <option>
                                    <%= subject.name %>
                                </option>
                            <% }else{   %>
                                <option selected="selected">
                                    <%= subject.name %>
                                </option>
                            <% }    %>
                        
                        <% })   %>
                    <% } %>
                  </select>
                
              </div>

              <div class="mb-3">
                <label for="Topicname" class="form-label">Choose Topic Name</label>
                <!-- <input type="text" id="text" class="form-control" name="subjectname" placeholder="subject" required=""> -->

                  <select id="topicname" name="topicname">
                    <option>--</option>
                    <% if(topicsList.length>0){ %>
                         <% topicsList.forEach(topic => { %>
                            
                            <option>
                                <%= topic.topicName %>
                            </option>
                        
                        <% })   %>
                        <option>All Topics</option>
                    <% } %>
                  </select>
                
              </div>
              <div>
                <!-- Button -->
                <div class="d-grid">
                  <button type="submit" class="btn btn-primary">Give Quiz
                    </button>
                </div>
              </div>


            </form>
      </div>
      <div class="row">
        
        

      </div>
    </div> <!-- .container -->
  </div> <!-- .page-section -->

 
  

  <%- include('./userPartials/footer.ejs') %>

<script src="/seogram/assets/js/jquery-3.5.1.min.js"></script>

