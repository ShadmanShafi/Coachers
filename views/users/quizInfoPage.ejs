  <script>
    function getTopics(){
        const subjectChosen = document.getElementById('subjectname').value;
        if(subjectChosen != '--'){
            window.location.replace("/users/quiz/" + subjectChosen);
        }
    }
</script>

</head>
<body >

  <!-- Back to top button -->
  <div class="back-to-top"></div>

  <!-- Header -->
  <%- include('./userPartials/headerNavbar.ejs') %>
  <!-- header end -->

  
  <!--row align-items-center justify-content-center g-0 min-vh-100-->
  <div class="page-section bg-light row align-items-left justify-content-left g-0 min-vh-30" style="padding-left: 10%;">

    <div class="page-section bg-light">
      <div class="container" >
        <div class="card smooth-shadow-md" style=" text-align: center; border-radius: 10px; box-shadow: 5px 5px 10px rgb(110, 83, 184);  text-align:center;" >
      
          <!-- Card body -->
          <div class="card-body p-6" style="text-align: center;">
                        
            <!-- Form -->
            <form action="/users/quiz" method="POST" style="align-items: center;">
              <!-- Username -->
              <div class="mb-3">
                <label for="Subjectname" class="form-label">Choose <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M22 13h-2v-4h2v4zm0-5h-2v-4h2v4zm0 6h-2v4h2v-4zm0 5h-2v4h2v-4zm-10.768-5.886c-.238.447-.392 1.025-.392 1.475 0 1.203 1.173 1.211 1.751.08.237-.465.391-1.058.391-1.51 0-.972-1.166-1.144-1.75-.045zm-5.737-9.114h13.505v20h-14c-1.656 0-3-1.343-3-3v-18c0-1.657 1.344-3 3-3h17v2h-16.505c-1.376 0-1.376 2 0 2zm2.505 10.159c0 2.098 1.409 3.724 4.014 3.724 1.44 0 2.356-.415 2.927-.736l-.392-.566c-.585.338-1.286.648-2.433.648-1.958 0-3.275-1.256-3.275-3.127 0-3.265 3.657-3.861 5.265-2.898 1.499.938 1.443 3.187.333 4.047-.592.472-1.257.456-1.042-.433 0 0 .693-2.564.774-2.842h-.778l-.156.543c-.158-.448-.539-.74-1.091-.74-1.153 0-2.128 1.251-2.128 2.733 0 .989.523 1.602 1.36 1.602.733 0 1.115-.415 1.351-.785-.172 1.659 3.271.893 3.271-2.012 0-1.854-1.503-3.2-3.575-3.2-2.837 0-4.425 1.8-4.425 4.042z"/></svg>
                </label>
                <!-- <input type="text" id="text" class="form-control" name="subjectname" placeholder="subject" required=""> -->
  
                  <select id="subjectname" name="subjectname" onchange="getTopics()" style="border-radius: 10%; width: 100px;">
                   
                    <% if(SubjectList.length>0){ %>
                         <% SubjectList.forEach(subject => { %>
                            <% if(chosenSubject != subject.name){   %>
                              
                              <option>
                                   <%= subject.name %>
                                </option>
                            <% }else{   %>
                                <option  selected="selected">
                                   <%= subject.name %>
                                </option>
                            <% }    %>
                        
                        <% })   %>
                    <% } %>
                  </select>
                
              </div>
  
              <div class="mb-3">
                <label for="Topicname" class="form-label">Choose Topic</label>
                <!-- <input type="text" id="text" class="form-control" name="subjectname" placeholder="subject" required=""> -->
  
                  <select id="topicname" name="topicname" style="width: 100px;">
                  
                    <% if(topicsList.length>0){ %>
                         <% topicsList.forEach(topic => { %>
                            
                            <option >
                              
                                <%= topic.topicName %>
                            </option>
                        
                        <% })   %>
                        <option >All Topics</option>
                    <% } %>
                  </select>
                
              </div>
              <div>
                <!-- Button -->
                <div class="d-grid">
                  <button type="submit" class="btn btn-primary">Give Quiz</button>
                </div>
              </div>
  
  
            </form>
            
          </div>
      </div> <!-- .container -->
    </div>
  </div> <!-- .page-section -->
  </div>

  <%- include('./userPartials/footer.ejs') %>

